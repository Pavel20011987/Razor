    </dl>
</div>

@if (User.IsInRole("Admin") || User.IsInRole("User") )
{
    <div>    
        <a asp-page="./Edit" asp-route-id="@Model.NetworkAssignment.NetworkAssignmentID" class="btn btn-outline-warning">Edit</a>  
        <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
}
else
{
    <div>     
        <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
    </div> 
}
