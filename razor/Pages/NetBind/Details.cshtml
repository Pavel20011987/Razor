        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NetworkAssignment.networkMngmnt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NetworkAssignment.Network.allocatedIP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NetworkAssignment.Network.allocatedIP)
        </dd>        
